= javascript_include_tag 'https://js.stripe.com/v2/'

.row
  .col-sm-6.col-sm-offset-3
    = form_tag "/subscriptions/update_card_details", id:'payment-form'  do
      %span.payment-errors.text-danger

      .form-group
        %label{for:'number'} Card Number
        %input.form-control{"data-stripe" => "number", :size => "20", :type => "text", id: 'number'}/
      .form-group
        %label{for:'cvc'} CVC
        %input.form-control{"data-stripe" => "cvc", :size => "4", :type => "text", id:'cvc'}/
      %label{for:'exp'} Expiration (MM/YYYY)
      .form-group
        %input.form-control.exp-field{"data-stripe" => "exp-month", :size => "2", :type => "text", id: 'exp'}/
        %span /
        %input.form-control.exp-field{"data-stripe" => "exp-year", :size => "4", :type => "text"}/
      %button.btn.btn-primary{:type => "submit"} Submit Payment

